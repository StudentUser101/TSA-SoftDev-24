<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView"
        app:srcCompat="@drawable/fsbsb_modified"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="429dp"
        android:layout_height="180dp"
        android:layout_alignLeft="@id/imageView"
        android:layout_alignEnd="@id/imageView"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="-41dp"
        android:foregroundGravity="center"
        android:gravity="left"
        android:text="Welcome to IceBreaker!"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="410dp"
        android:layout_height="180dp"
        android:layout_alignLeft="@id/imageView"
        android:layout_alignEnd="@id/imageView"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="1dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Learn to Break Ice! In this interactive app, develop numerous social skills while maintaining a strong conversation!"
        android:textSize="26sp" />

    <Button
        android:id="@+id/cont"
        android:layout_width="367dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="450dp"
        android:backgroundTint="#2196F3"
        android:gravity="center"
        android:text="Continue to our optional Tone Test, which can be better for response personalization. "
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cont2"
        android:layout_width="367dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="580dp"
        android:backgroundTint="#00BCD4"
        android:textStyle="bold"
        android:text="Go directly to home page."

        />


</RelativeLayout>